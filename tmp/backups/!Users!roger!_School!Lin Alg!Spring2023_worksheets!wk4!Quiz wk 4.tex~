\begin{document}
	
\centerline{\bf Math 20580 L.A. and D.E. Tutorial}
\centerline{\bf Quiz 3}
\vskip .2in
\noindent
 CALCULATORS ARE NOT ALLOWED.
 \vskip .1 in
	
\begin{questions}
	%%%%%%%%%%%%%%%%%
	%
	%
	%Question 1.
	%
	%
	%%%%%%%%%%%%%%%%%
  \question True or False:
  Given three \textbf{linearly independent} vectors ${\bf v}_1, {\bf v}_2,$
and ${\bf v}_3$, then any vector in $\mathrm{Span}({\bf v}_1,{\bf
  v}_2,{\bf v}_3)$ is in the $\mathrm{Span}({\bf v}_1,{\bf
  v}_2)$.

\vskip5cm
	%%%%%%%%%%%%%%%%%
	%
	%
% Question 2.
	%
	%
	%%%%%%%%%%%%%%%%%	
\question Consider the matrix:
\[ A = \begin{bmatrix*}[r]
    1 & -1 & 0 \\
    2 & 3 & 1
  \end{bmatrix*}
\]
\begin{parts}
   \part Find a basis for $\mathrm{Col}(A)$.
   \part Is the vector
   $\begin{bmatrix}
     1 \\ 4
   \end{bmatrix}$
   in $\textrm{Col}(A)$?
   
   \part Is the vector
   $\begin{bmatrix}
     1 & 3 & 4
   \end{bmatrix}$
   in $\textrm{Row}(A)$?
   
   \part Is the vector 
   $\begin{bmatrix}
     1 \\ 1 \\ -5
   \end{bmatrix}$ in $\textrm{Null}(A)$?

 \end{parts}
\end{questions}
