mat = [[1,2],[3,4]]
r = 1
c = 4

def soln():
    if r*c != len(mat)*len(mat[0]):
        return mat
    new = [[]]
    for i in range(len(mat)):
        for j in range(len(mat[0])):
            if len(new[-1]) < c:
                new[-1].append(mat[i][j])
            else:
                new.append([mat[i][j]])
    return new

print(soln())


# 97% faster
# 91% less memory
